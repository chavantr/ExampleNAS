<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_margin="8dp"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:elevation="7dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:translationZ="5dp">
    <RelativeLayout
            android:id="@+id/rlContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imgIcon"
                   android:layout_centerVertical="true"
                   android:src="@mipmap/ic_launcher"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/lblName"
                  android:layout_toRightOf="@id/imgIcon" android:layout_marginStart="5dp"
                  android:textStyle="bold" android:textColor="@color/colorAccent"
                  android:padding="7dp" android:gravity="center_vertical" android:text="@string/app_name"/>

        <TextView android:layout_width="match_parent" android:layout_below="@id/lblName"
                  android:layout_toRightOf="@id/imgIcon" android:layout_marginStart="5dp"
                  android:layout_height="wrap_content" android:text="last time"
                  android:id="@+id/lblLastUnUsedTime" android:gravity="center_vertical" android:padding="7dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>